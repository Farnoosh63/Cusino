<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.epicodus.foodfinder">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.epicodus.foodfinder.ui.MainActivity"
            android:theme="@style/NoActionBarTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.epicodus.foodfinder.ui.AccountActivity"
            android:theme="@style/NoActionBarTheme" />
        <activity android:name="com.epicodus.foodfinder.ui.UserActivity">

        </activity>

        <activity
            android:name=".ui.ExistingUserActivity"
            android:theme="@style/NoActionBarTheme" />
        <activity android:name=".ui.SearchActivity">
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="com.epicodus.foodfinder.ui.UserActivity">
        </meta-data>
        </activity>
        <activity android:name=".ui.FoodDetailActivity" />

        <activity
            android:name=".ui.AllSavedRecipes">
             <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.epicodus.foodfinder.ui.UserActivity">
             </meta-data>
        </activity>

    </application>

</manifest>